{
    "name": "Enforce-Resource-Tags",
    "type": "Microsoft.Authorization/policyDefinitions",
    "apiVersion": "2021-06-01",
    "scope": null,
        "properties": {
        "displayName": "Resources must have mandatory tagging applied",
        "policyType": "Custom",
        "mode": "Indexed",
        "description": "Enforce mandatory 'Owner', 'Department', 'Project' and other tags on Resources",
        "metadata": {
            "version": "1.0.0",
            "category": "Tags"
        },
        "policyRule": {
            "if": {
              "anyOf": [
                {
                  "field": "[concat('tags[', parameters('Owner'), ']')]",
                  "exists": "false"
                },
                {
                  "not": {
                    "field": "[concat('tags[', parameters('Owner'), ']')]",
                    "equals": "[parameters('OwnerValue')]"
                  }
                },
                {
                  "field": "[concat('tags[', parameters('Department'), ']')]",
                  "exists": "false"
                },
                {
                  "not": {
                    "field": "[concat('tags[', parameters('Department'), ']')]",
                    "equals": "[parameters('DepartmentValue')]"
                  }
                },
                {
                  "field": "[concat('tags[', parameters('Project'), ']')]",
                  "exists": "false"
                },
                {
                  "not": {
                    "field": "[concat('tags[', parameters('Project'), ']')]",
                    "equals": "[parameters('ProjectValue')]"
                  }
                },
                {
                  "field": "[concat('tags[', parameters('Team'), ']')]",
                  "exists": "false"
                },
                {
                  "not": {
                    "field": "[concat('tags[', parameters('Team'), ']')]",
                    "equals": "[parameters('TeamValue')]"
                  }
                },
                {
                  "field": "[concat('tags[', parameters('Environment'), ']')]",
                  "exists": "false"
                },
                {
                  "not": {
                    "field": "[concat('tags[', parameters('Environment'), ']')]",
                    "equals": "[parameters('EnvironmentValue')]"
                  }
                },
                {
                  "field": "[concat('tags[', parameters('CreatedOn'), ']')]",
                  "exists": "false"
                },
                {
                  "not": {
                    "field": "[concat('tags[', parameters('CreatedOn'), ']')]",
                    "equals": "[parameters('CreatedOnValue')]"
                  }
                }
              ]
            },
            "then": {
              "effect": "append",
              "details": [
                {
                  "field": "[concat('tags[', parameters('Owner'), ']')]",
                  "value": "[parameters('OwnerValue')]"
                },
                {
                  "field": "[concat('tags[', parameters('Department'), ']')]",
                  "value": "[parameters('DepartmentValue')]"
                },
                {
                  "field": "[concat('tags[', parameters('Project'), ']')]",
                  "value": "[parameters('ProjectValue')]"
                },
                {
                  "field": "[concat('tags[', parameters('Team'), ']')]",
                  "value": "[parameters('TeamValue')]"
                },
                {
                  "field": "[concat('tags[', parameters('Environment'), ']')]",
                  "value": "[parameters('EnvironmentValue')]"
                },
                {
                  "field": "[concat('tags[', parameters('CreatedOn'), ']')]",
                  "value": "[parameters('CreatedOnValue')]"
                }
              ]
            }
          },
            "parameters": {
                "Owner": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Owner",
                        "description": "Specifies the Owner of the resource"
                    }
                },
                "OwnerValue": {
                    "type": "String",
                    "metadata": {
                        "displayName": "OwnerValue",
                        "description": "Specifies the OwnerValue for the Owner tag"
                    },
                    "defaultValue": "Unknown Owner"
                },
                "Department": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Department",
                        "description": "Specifies the Department that the resource belongs to"
                    }
                },
                "DepartmentValue": {
                    "type": "String",
                    "metadata": {
                        "displayName": "DepartmentValue",
                        "description": "Specifies the value Department tag"
                    },
                    "defaultValue": "Unknown Department"
                },
                "Project": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Project",
                        "description": "Specifies the Project that the resource belongs to"
                    }
                },
                "ProjectValue": {
                    "type": "String",
                    "metadata": {
                        "displayName": "ProjectValue",
                        "description": "Specifies the value for Project tag"
                    },
                    "defaultValue": "Unknown Project"
                },
                "Team": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Team",
                        "description": "Specifies the Team that the resource belongs to"
                    },
                    "defaultValue": "Unknown"
                },
                "TeamValue": {
                    "type": "String",
                    "metadata": {
                        "displayName": "TeamValue",
                        "description": "Specifies the value for the Team tag"
                    },
                    "defaultValue": "Unknown Team"
                },
                "Environment": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Environment",
                        "description": "Specifies the Environment that the resource belongs to"
                    },
                    "defaultValue": "prod",
                    "allowedValues": ["prod", "dev", "qa", "staging", "other"]
                },
                "EnvironmentValue": {
                    "type": "String",
                    "metadata": {
                        "displayName": "EnvironmentValue",
                        "description": "Specifies the value for the Environment tag"
                    },
                    "defaultValue": "prod",
                    "allowedValues": ["prod", "dev", "qa", "staging", "other"]
                },
                "CreatedOn": {
                    "type": "String",
                    "metadata": {
                        "displayName": "CreatedOn",
                        "description": "Specifies the Created Date/Time for the resource"
                    },
                    "defaultValue": "formatDateTime(utcNow(), 'yyyy-MM-ddTHH:mm:ssZ')"
                },
                "CreatedOnValue": {
                    "type": "String",
                    "metadata": {
                        "displayName": "CreatedOnValue",
                        "description": "Specifies the value for the CreatedOn tag"
                    },
                    "defaultValue": "formatDateTime(utcNow(), 'yyyy-MM-ddTHH:mm:ssZ')"
                }
            }
        }
    }